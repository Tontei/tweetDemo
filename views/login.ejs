<link rel="stylesheet" href="app.css">
<link rel="stylesheet" href="style.css">
<meta name="viewport" content="width=device-width, initial-scale=1.0">


<div class="container my-container text-center">
    <h1 class="h1 mb-3 font-weight-heavy">Login</h1>
    <form action="/login" class="form form-signin" method="POST">

        <div class="form-group">
            <input type="text" class="form-control top" name="username" placeholder="username"/>
        </div>

        <div class="form-group">
            <input type="password" class="form-control bottom" name="password" placeholder="password">
        </div>
        
        <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
    </form>


</div>


