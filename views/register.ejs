<meta name="viewport" content="width=device-width, initial-scale=1.0">

<div class="container my-container text-center">
    <h1>Register</h1>

    <form action="/register" class="form-signin" method="POST">
        <div class="form-group">
            <input type="Text" class="form-control top" name="username" placeholder="username">
        </div>
        
        <div class="form-group">
            <input type="password" class="form-control bottom" name="password" placeholder="password">
        </div>

        <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
    </form>

</div>

